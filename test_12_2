import pytest

from ukol_12 import counting_sort

@pytest.mark.parametrize(
    ('unsorted_words', 'unsorted_words_exp', 'word_counts', 'word_counts_exp'),
    [
        ('Vitejte v kurzu programovani v jazyce Python.',
         ['jazyce', 'kurzu', 'programovani', 'python.', 'v', 'v', 'vitejte']),
    ]
)
def test_12_2(unsorted_words, unsorted_words_exp, word_counts, word_counts_exp):
    sorted_words, word_counts = counting_sort(unsorted_words)
    
    assert sorted_words == sorted_words_exp 
    assert word_counts == word_counts_exp
